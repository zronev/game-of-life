{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "importsNotUsedAsValues": "error",
    "noImplicitOverride": true
  },
  "include": ["./src/**/*", "./typings/*"],
  "exclude": ["node_modules"]
}
